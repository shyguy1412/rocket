{
    "name": "electron-esbuild-template",
    "version": "2.0.0",
    "description": "Template for electron apps with esbuild",
    "main": "build/main.js",
    "scripts": {
        "watch": "node build.mjs --watch --port 3000 --host 127.0.0.1",
        "dev": "concurrently -k \"npm:watch\" \"wait-on http://127.0.0.1:3000 && DEV=true nodemon -w build/main.js -w build/preload.js --exec electron build/main.js\"",
        "prestart": "npm run build",
        "start": "electron ./build/main.js",
        "typecheck": "tsc --noEmit -p ./tsconfig.json",
        "build": "node build.mjs && electron-builder",
        "cargo-watch": "nodemon -w ./src/core -i ./src/core/package -e rs --exec npm run cargo-build",
        "cargo-build": "TS_DECL_GEN=true cargo build --message-format=json-render-diagnostics > cargo.log",
        "postcargo-build": "neon dist -o src/core/package/core.node --name app_core < cargo.log"
    },
    "build": {
        "files": [
            "./build/**/*"
        ]
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/shyguy1412/electron-esbuild-template.git"
    },
    "author": "Shy",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/shyguy1412/electron-esbuild-template/issues"
    },
    "homepage": "https://github.com/shyguy1412/electron-esbuild-template#readme",
    "devDependencies": {
        "@neon-rs/cli": "^0.1.82",
        "concurrently": "^9.2.1",
        "electron": "^40.6.0",
        "electron-builder": "^26.8.1",
        "esbuild": "^0.27.3",
        "nodemon": "^3.1.14",
        "typescript": "^5.9.3",
        "typescript-plugin-css-modules": "^5.2.0",
        "wait-on": "^9.0.4"
    },
    "dependencies": {
        "normalize.css": "^8.0.1",
        "preact": "^10.28.4",
        "@xstate/store": "^3.15.0",
        "@xstate/store-react": "^1.0.1",
        "i18next": "^25.8.13",
        "react-spinners": "^0.17.0"
    }
}
